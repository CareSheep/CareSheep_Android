<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.guardian.GuardianMyPageFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_app_name"
            style="@style/Text.Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:text="@string/guardian_my_page"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_user_name"
                style="@style/Text.Title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:text="김소융님"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_user_gmail"
                style="@style/Text.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="swu2023@gmail.com"
                android:textColor="@color/gray_700"
                app:layout_constraintStart_toStartOf="@+id/tv_user_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_elder_connected_info"
                style="@style/Text.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/rectangle_gray400_radius_20"
                android:paddingHorizontal="16dp"
                android:text="어르신 연결 안 됨"
                app:layout_constraintStart_toStartOf="@+id/tv_user_gmail"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_gmail" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginEnd="20dp"
                android:src="@color/gray_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_user_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_elder"
                style="@style/Text.Title3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="@string/elder"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_elder_connected_info" />

            <View
                android:id="@+id/v_first"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_500"
                app:layout_constraintTop_toBottomOf="@+id/tv_elder" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_elder_routine_info"
                style="@style/Text.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="@string/guardian_my_page_routine_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_first" />

            <View
                android:id="@+id/v_middle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_500"
                app:layout_constraintTop_toBottomOf="@+id/btn_elder_routine_info" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_connect_elder"
                style="@style/Text.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="@string/guardian_my_page_connect_elder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_middle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_500"
                app:layout_constraintTop_toBottomOf="@+id/btn_connect_elder" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>