<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="12dp">

    <ImageView
        android:id="@+id/iv_bar"
        android:layout_width="6dp"
        android:layout_height="0dp"
        android:src="@drawable/rectangle_green_radius_20"
        app:layout_constraintBottom_toBottomOf="@+id/tv_schedule_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_schedule_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_schedule_title"
        style="@style/Text.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingTop="4dp"
        android:text="병원 가기"
        app:layout_constraintStart_toEndOf="@+id/iv_bar"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_schedule_time"
        style="@style/Text.Body3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingBottom="4dp"
        android:text="오전 8:00 - 오전 9:00"
        android:textColor="@color/gray_700"
        app:layout_constraintStart_toEndOf="@+id/iv_bar"
        app:layout_constraintTop_toBottomOf="@+id/tv_schedule_title" />

</androidx.constraintlayout.widget.ConstraintLayout>