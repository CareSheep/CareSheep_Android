<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.guardian.GuardianVoiceDetailActivity">

    <!-- 툴바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_30" />
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Text.Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="녹음 상세 내용" />
    </androidx.appcompat.widget.Toolbar>

    <!-- 시간 정보 레이아웃 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/time_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tb_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- 시간 정보 텍스트 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/record_time_textview"
            style="@style/Text.Title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 시간 표시 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx년 xx월 xx일"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/record_time_textview"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 상황 정보 레이아웃 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/situation_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/time_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- 상황 정보 텍스트 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/situation_textview"
            style="@style/Text.Title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상황 유형"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 상황 이미지 -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_situation_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/situation_type_daily"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/situation_textview"
            app:layout_constraintBottom_toBottomOf="@+id/situation_layout" />

        <!-- 상황 유형 텍스트 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/situation_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="상황"
            android:textSize="35sp"
            app:layout_constraintStart_toEndOf="@id/iv_situation_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/situation_textview"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 프로필 이미지, 이름, 날짜, 음성 내용 필드를 감싸는 레이아웃 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/situation_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- 음성 내용 텍스트 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/voice_textview"
            style="@style/Text.Title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상황 유형"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 프로필 이미지 -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/voice_textview" />

        <!-- 프로필 이름 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_profile_name"
            style="@style/Text.Title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="프로필 이름"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_image"
            app:layout_constraintTop_toTopOf="@+id/iv_profile_image" />

        <!-- 음성내용 -->
        <android.widget.Button
            android:id="@+id/record_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="어르신 음성 내용"
            android:textSize="45sp"
            android:background="@drawable/solid_positive_button"
            app:layout_constraintStart_toEndOf="@id/iv_profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_name"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 화면 하단에 위치한 이미지 -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_new_image"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/image_daily" />

</androidx.constraintlayout.widget.ConstraintLayout>
