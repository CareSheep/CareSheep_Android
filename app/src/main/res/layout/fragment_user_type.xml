<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.start.UserTypeFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_user_type_title"
        style="@style/Text.Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="6sp"
        android:text="@string/sign_up_user_type_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_user_type_sub_title"
        style="@style/Text.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="6sp"
        android:text="@string/sign_up_user_type_sub_title"
        android:textColor="@color/gray_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_type_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_type_sub_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_elder_type"
                style="@style/Text.Title2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_sign_up_user_info"
                android:drawableTop="@drawable/ic_elderly_100"
                android:drawablePadding="40dp"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:text="@string/elder"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_check_elder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:src="@drawable/selector_check_mark_btn"
                app:layout_constraintEnd_toEndOf="@+id/btn_elder_type"
                app:layout_constraintStart_toStartOf="@+id/btn_elder_type"
                app:layout_constraintTop_toBottomOf="@+id/btn_elder_type" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_guardian_type"
                style="@style/Text.Title2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_sign_up_user_info"
                android:drawableTop="@drawable/ic_guardian_100"
                android:drawablePadding="40dp"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:text="@string/guardian"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_check_guardian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:src="@drawable/selector_check_mark_btn"
                app:layout_constraintEnd_toEndOf="@+id/btn_guardian_type"
                app:layout_constraintStart_toStartOf="@+id/btn_guardian_type"
                app:layout_constraintTop_toBottomOf="@+id/btn_guardian_type" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        style="@style/Text.Title3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btn_sign_up"
        android:enabled="false"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="@string/sign_up_next"
        android:textColor="@color/gray_700"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>